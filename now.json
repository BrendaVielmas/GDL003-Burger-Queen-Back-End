

{
    "version": 2,
    "builds": [{ "src": "/index.js", "use": "@now/node-server" }],
    "routes": [
        {
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
                "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
            },
            "src": "/.*",
            "dest": "/index.js"
        },
        
      {
        "src": "/api/products",
        "dest": "/index.js",
        "methods": ["GET"]
      },
      {
        "src": "/api/products/:productId",
        "dest": "/index.js",
        "methods": ["GET"]
      },
      {
        "src": "/api/products",
        "dest": "/index.js",
        "methods": ["POST"]
      },
      {
        "src": "/api/products/:productId",
        "dest": "/index.js",
        "methods": ["PUT"]
      },
      {
        "src": "/api/products/:productId",
        "dest": "/index.js",
        "methods": ["DELETE"]
      },
      {
        "src": "/api/orders",
        "dest": "/index.js",
        "methods": ["GET"]
      },
      {
        "src": "/api/orders/:orderId",
        "dest": "/index.js",
        "methods": ["GET"]
      },
      {
        "src": "/api/orders",
        "dest": "/index.js",
        "methods": ["POST"]
      },
      {
        "src": "/api/orders/:orderId",
        "dest": "/index.js",
        "methods": ["PUT"]
      },
      {
        "src": "/api/orders/:orderId",
        "dest": "/index.js",
        "methods": ["DELETE"]
      }
    ]
  }